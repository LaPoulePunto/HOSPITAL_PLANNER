{% extends 'base.html.twig' %}

{% block title %}
    Liste de vos patients
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="display-4 text-center mb-4">Liste de vos patients</h1>
            </div>
        </div>

        <div class="row">
            {% if patients|length > 0 %}
                <div class="col-8 mx-auto">
                    <div class="list-group">
                        {% for patient in patients %}
                            <a href="{{ path('app_display_patient_file', {patientId: patient.id}) }}"
                               class="list-group-item list-group-item-action
                               d-md-flex justify-content-between align-items-center"><div
                                >{{ patient.gender == 0 ? 'Mme' : 'M.' }} <strong class="text-primary"
                                    >{{ patient.lastname }}</strong
                                    >, {{ patient.firstname }}</div
                                ></a>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-muted text-center">Aucun patient trouv√©.</p>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
