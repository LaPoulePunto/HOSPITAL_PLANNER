{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fiche Patient</h1>
    <br>
    <h2>{{ patient.lastname }} {{ patient.firstname }}</h2>
    <dl>
        <dt>Groupe sanguin :</dt>
        <dd>{{ patient.bloodGroup }}</dd>

        <dt>Allergies :</dt>
        <dd>{{ patient.allergies }}</dd>

        <dt>Traitements suivis :</dt>
        <dd>{{ patient.treatments }}</dd>

        <dt>Autres consultations :</dt>
        <dd>
            {% for consultation in patient.consultation %}
                <p>Consultation ID : {{ consultation.id }}, Date : {{ consultation.date|date('d/m/Y') }}</p>
            {% else %}
                <p>Aucune consultation trouv√©e.</p>
            {% endfor %}
        </dd>

        <dt>Commentaires :</dt>
        <dd>{{ patient.comments }}</dd>
    </dl>
{% endblock %}

{% block title %}

{% endblock %}

