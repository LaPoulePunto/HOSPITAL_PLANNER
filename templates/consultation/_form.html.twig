{% extends 'base.html.twig' %}

{% block title %}
    {{ titlePage }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="card shadow p-4 col-md-6 mb-4">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-danger" role="alert">{{ message }}</div>
                    {% endfor %}
                {% endfor %}
                <h1>{{ titlePage }}</h1>
                {{ form_start(form) }}
                    {{ form_row(form.date, {label: 'Date de consultation'}) }}
                    {{ form_row(form.startTime, {label: 'Heure de d√©but'}) }}
                    {{ form_row(form.endTime, {label: 'Heure de fin'}) }}
                    {{ form_row(form.consultationType, {label: 'Type de consultation'}) }}
                {% if is_granted('ROLE_PATIENT') %}
                    {{ form_row(form.healthProfessional, {label: 'Praticien'}) }}
                {% else %}
                    {{ form_row(form.patient, {label: 'Patient'}) }}
                    {{ form_row(form.room, {label: 'Salle de consultation'}) }}
                {% endif %}
                <input type="submit" value="{{ submit_label }}" class="btn btn-primary" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
