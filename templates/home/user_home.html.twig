{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    {% if is_granted('ROLE_PATIENT') %}
        {% set show_cons_btn_redirection = path('app_user_consultations') %}
    {% elseif is_granted('ROLE_HEALTH_PROFESSIONAL') %}
        {% set show_cons_btn_redirection = path('app_health_professional_calendar') %}
    {% endif %}

    <div class="container mt-4">
        <div class="row">
            <h1 class="mb-5">Bonjour {{ user.firstname }} !</h1>
        </div>

        {% if consultations is not empty %}
            <div class="row">
                <div class="col-md-12">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        {% if consultations|length > 3 ? 3 : consultations|length == 1 %}
                            <h2>üìÖ Voir votre prochaine consultation :</h2>
                        {% else %}
                            <h2>üìÖ Voir vos {{ consultations|length > 3 ? 3 : consultations|length }} prochaines consultations  :</h2>
                        {% endif %}
                        <a class="btn btn-outline-danger btn-sm" href="{{ show_cons_btn_redirection }}">Voir toutes mes prochaines consultations</a>
                    </div>
                    <div class="table-responsive rounded">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Heure de D√©but</th>
                                <th scope="col">Heure de Fin</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for consultation in consultations|slice(0, 3) %}
                                <tr>
                                    <td>{{ consultation.date|date('d/m/Y') }}</td>
                                    <td>{{ consultation.startTime|date('H:i') }}</td>
                                    <td>{{ consultation.endTime|date('H:i') }}</td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <td colspan="3">
                                    <a href="{{ path('app_consultation_create') }}" class="btn btn-outline-dark" >Cr√©er une consultation</a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info text-center mt-4" role="alert">
                <h4 class="alert-heading">Pas de consultations pr√©vues</h4>
                <p>Vous n'avez actuellement aucune consultation programm√©e.</p>
                {% if is_granted('ROLE_PATIENT') %}
                    <hr>
                    <p class="mb-0">N'h√©sitez pas √† en planifier une prochainement.</p>
                {% endif %}
            </div>
        {% endif %}
    </div>

{% endblock %}
