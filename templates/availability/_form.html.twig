{% extends 'base.html.twig' %}

{% block title %}
    {{ titlePage }}
{% endblock %}

{% block body %}
    <h1>{{ titlePage }}</h1>
    {{ form_start(form) }}
        {{ form_row(form.date, {label: 'Date de disponibilité'}) }}
        {{ form_row(form.startTime, {label: 'Heure de début'}) }}
        {{ form_row(form.endTime, {label: 'Heure de fin'}) }}
        <input type="submit" value="{{ submit_label }}"
               class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
