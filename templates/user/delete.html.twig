{% extends 'base.html.twig' %}

{% set titre = 'Suppression du compte de ' ~ user.lastName ~ ', ' ~ user.firstName %}

{% block title %}
    {{ titre }}
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="card shadow p-4 col-md-6">
                <h1>{{ titre }}</h1>
                {{ form_errors(form) }}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
