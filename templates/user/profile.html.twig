{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ user.lastname }} {{ user.firstname }}</h1>
    <dl>
        <dt>Nom</dt>
        <dd>{{ user.firstname }}</dd>

        <dt>Prénom</dt>
        <dd>{{ user.lastname }}</dd>

        <dt>Identifiant</dt>
        <dd>{{ user.login }}</dd>

        <dt>Email</dt>
        <dd>{{ user.email }}</dd>

        <dt>Genre</dt>
        <dd>{{ user.gender == 1 ? 'Homme' : (user.gender == 2 ? 'Femme' : 'Genre non spécifié') }}</dd>
    </dl>
{% endblock %}

{% block title %}

{% endblock %}

